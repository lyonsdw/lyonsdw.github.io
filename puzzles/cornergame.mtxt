# maple commands to play corner game
# play game by entering data, for example
# > X:=[2,5,4,8];
# then run these commands with the single command
# > read(`cornergame.mtxt`);

with(stats):
with(describe):

Y:=X:
j:=0:

while ((evalf(sumdata[2](X)) > 0) and (j < 200)) do
  for i from 1 to nops(X)-1 do
    Y[i]:=abs(X[i+1]-X[i]):
    Y[nops(X)]:=abs(X[nops(X)]-X[1]):
  od:
  X:=Y:
  j:=j+1:
od;
